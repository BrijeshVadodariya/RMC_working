<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food_adultration_main">


    <TextView
        android:id="@+id/milk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="25sp"
        android:fontFamily="@font/opensans_extra_bold"
        android:textColor="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/milk_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing Method:"
                android:fontFamily="@font/opensans_semi_bold"
                android:textSize="18sp"
                android:textColor="#3C3939"
                android:layout_marginTop="16sp"
                android:layout_marginStart="6sp"
                />

            <TextView
                android:id="@+id/milk_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/opensans_regular"
                android:lineSpacingExtra="8sp"
                android:text="TextView"
                android:textColor="#3D3939"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageSuccess"
                    android:contentDescription="@string/success"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/imageFailure"
                    android:contentDescription="@string/failure"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>